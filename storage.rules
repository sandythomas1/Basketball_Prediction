rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Profile Photos - User-specific access
    // Matches path: profile_photos/{uid}.jpg in UserService.dart
    match /profile_photos/{userId} {
      // Anyone authenticated can view profile photos
      allow read: if request.auth != null;
      
      // Only the owner can upload/update/delete their photo
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // 5MB max
                   && request.resource.contentType.matches('image/.*');  // Images only
    }
    
    // Deny all other paths by default (production security)
    // This replaces the expiring test mode rule
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
