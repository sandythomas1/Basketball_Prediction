{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        
        "email": {
          ".validate": "newData.isString() && newData.val().length <= 254 && newData.val().matches(/^[^@]+@[^@]+\\.[^@]+$/)"
        },
        "firstName": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 50"
        },
        "lastName": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 50"
        },
        "username": {
          ".validate": "newData.isString() && newData.val().length >= 3 && newData.val().length <= 20 && newData.val().matches(/^[a-zA-Z0-9_]+$/)"
        },
        "photoUrl": {
          ".validate": "newData.isString() && newData.val().length <= 2048"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "followersCount": {
          ".write": "auth != null",
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        
        "$other": {
          ".validate": false
        }
      }
    },
    
    "usernames": {
      ".read": true,
      "$username": {
        ".write": "auth != null && (!data.exists() || data.child('uid').val() == auth.uid)",
        ".validate": "$username.length >= 3 && $username.length <= 20 && $username.matches(/^[a-z0-9_]+$/)",
        
        "uid": {
          ".validate": "newData.isString() && newData.val() == auth.uid"
        },
        
        "$other": {
          ".validate": false
        }
      }
    },
   
    "followers": {
      "$userId": {
        ".read": "auth != null",
        "$followerId": {
          ".write": "auth != null && auth.uid == $followerId",
          ".validate": "newData.hasChildren(['timestamp']) && newData.child('timestamp').isNumber()",
          
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          
          "$other": {
            ".validate": false
          }
        }
      }
    },
   
    "following": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        "$followedId": {
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "newData.hasChildren(['timestamp']) && newData.child('timestamp').isNumber()",
          
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          
          "$other": {
            ".validate": false
          }
        }
      }
    },
    
    "notifications": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null",
        "$notificationId": {
          ".validate": "newData.hasChildren(['type', 'actorUid', 'message', 'timestamp', 'isRead'])",
          
          "type": {
            ".validate": "newData.isString() && newData.val().length <= 50"
          },
          "actorUid": {
            ".validate": "newData.isString() && newData.val().length <= 128"
          },
          "actorUsername": {
            ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 20)"
          },
          "actorPhotoUrl": {
            ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 2048)"
          },
          "message": {
            ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 500"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "isRead": {
            ".validate": "newData.isBoolean()"
          },
          
          "$other": {
            ".validate": false
          }
        }
      }
    },
    
    "forums": {
      "general": {
        "messages": {
          ".read": "auth != null",
          "$messageId": {
            ".write": "auth != null && (!data.exists() || data.child('senderId').val() == auth.uid)",
            ".validate": "newData.hasChildren(['senderId', 'senderName', 'text', 'timestamp']) && newData.child('senderId').val() == auth.uid",
            
            "senderId": {
              ".validate": "newData.isString() && newData.val() == auth.uid"
            },
            "senderName": {
              ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
            },
            "senderPhoto": {
              ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 2048)"
            },
            "text": {
              ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 1000"
            },
            "timestamp": {
              ".validate": "newData.isNumber() && newData.val() <= now + 60000"
            },
            
            "$other": {
              ".validate": false
            }
          }
        }
      },
      
      "games": {
        "$gameId": {
          ".validate": "$gameId.length >= 1 && $gameId.length <= 100 && $gameId.matches(/^[a-zA-Z0-9_-]+$/)",
          
          "messages": {
            ".read": "auth != null",
            "$messageId": {
              ".write": "auth != null && (!data.exists() || data.child('senderId').val() == auth.uid)",
              ".validate": "newData.hasChildren(['senderId', 'senderName', 'text', 'timestamp']) && newData.child('senderId').val() == auth.uid",
              
              "senderId": {
                ".validate": "newData.isString() && newData.val() == auth.uid"
              },
              "senderName": {
                ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 20"
              },
              "senderPhoto": {
                ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 2048)"
              },
              "text": {
                ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 1000"
              },
              "timestamp": {
                ".validate": "newData.isNumber() && newData.val() <= now + 60000"
              },
              
              "$other": {
                ".validate": false
              }
            }
          }
        }
      }
    },
    
    "usage": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        "$date": {
          ".write": "auth != null && auth.uid == $uid",
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
        }
      }
    },
    
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
